@{
    Layout="Shared/_Layout.cshtml";
}

<h1>Your Favorite Restaurants</h1>
@if(Model.Count <= 0)
{
    <h3>You don't have any restaurants added yet!</h3>
}
else
{
    @foreach(var restaurant in Model)
    {
        <h3>Name: @restaurant.GetName()</h3>
        <ul id="restaurant-properties">
            <li><em>@restaurant.GetDescription()</em></li>
            <li>Price Range: @restaurant.GetPrice()</li>
            <li>Cuisine: @restaurant.GetCuisineName()</li>
        </ul>
    }
}

<h4><a href="/restaurants/new">Click here to add a restaurant.</a></h4>
<h4><a href="/cuisines">Click here to view your cuisines.</a></h4>
